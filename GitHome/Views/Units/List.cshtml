@model IEnumerable<GitHome.Models.Unit>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitDetail.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitDetail.askingPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitDetail.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitDetail.description)
