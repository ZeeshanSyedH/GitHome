                @Html.DisplayFor(modelItem => Unit.UnitDetail.numRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.numBedrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.numBathrooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.numGarageDoors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.centralAirConditioning)
            </td>
