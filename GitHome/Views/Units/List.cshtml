                @Html.DisplayFor(modelItem => Unit.UnitDetail.askingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Unit.UnitDetail.yearBuilt)
