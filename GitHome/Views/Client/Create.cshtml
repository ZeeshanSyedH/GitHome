@model GitHome.ViewModal.ClientFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Add Client</h2>

@using (Html.BeginForm("Create", "Client"))
{
        <!-- CLIENT FirstName-->
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "Inline" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control Inline InputHeightSmaller", placeholder = " First Name " })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>

    <!-- CLIENT LastName-->
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "Inline" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control Inline InputHeightSmaller", placeholder = " Last Name " })
        @Html.ValidationMessageFor(m => m.LastName)
    </div>

        <!--CLIENT Email Address-->
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "Inline" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control Inline InputHeightSmaller", placeholder = " Email Address " })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <!--CLIENT PhoneNumber-->
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber, new { @class = "Inline" })
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control Inline InputHeightSmaller", Placeholder = " Phone # "})
        @Html.ValidationMessageFor(m => m.PhoneNumber)
    </div>

    <button type="submit" value="Save" class="btn btn-primary btn-lg form-control">Save</button>
}

